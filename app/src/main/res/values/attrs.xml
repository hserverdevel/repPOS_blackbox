<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="typeface" format="enum">
        <enum name="frangd_compressed" value="0"/>
        <enum name="franklin_gothic_book" value="1"/>
        <enum name="roboto_black" value="2"/>
        <enum name="roboto_bold" value="3"/>
        <enum name="roboto_italic" value="4"/>
        <enum name="roboto_regular" value="5"/>
        <enum name="roboto_light_italic" value="6"/>
        <enum name="roboto_condensed_bold" value="7"/>
        <enum name="roboto_condensed_regular" value="8"/>
        <enum name="roboto_light" value="9"/>
        <enum name="franklin_gothic_demi" value="10"/>
        <enum name="franklin_gothic_book_cd" value="11"/>
        <enum name="franklin_gothic_book_italic" value="12"/>
        <enum name="franklin_gothic_medium_cd" value="13"/>
        <enum name="franklin_gothic_heavy" value="14"/>
        <enum name="franklin_gothic_demioblique" value="15"/>
    </attr>
    <attr name="letterSpacing" format="float"/>
    <!-- Definisce le classi come styleable e dice quali attributi possono avere
    -->
    <declare-styleable name="CustomButton">
        <attr name="typeface"/>
        <attr name="letterSpacing"/>
    </declare-styleable>
    <declare-styleable name="CustomTextView">
        <attr name="typeface"/>
        <attr name="letterSpacing"/>
    </declare-styleable>
    <declare-styleable name="CustomEditText">
        <attr name="typeface"/>
        <attr name="letterSpacing"/>
    </declare-styleable>
    <declare-styleable name="CustomChronometer">
        <attr name="typeface"/>
        <attr name="letterSpacing"/>
    </declare-styleable>
</resources>
