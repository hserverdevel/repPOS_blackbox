<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blackTransparent">

    <RelativeLayout
        android:layout_width="487dp"
        android:layout_height="270dp"
        android:layout_centerInParent="true"
        android:background="@drawable/view_base_background"
        android:id="@+id/insert_blackbox_ip_window">


        <!--   TITLE     -->
        <com.example.blackbox.graphics.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="52dp"
            android:layout_marginTop="5dp"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="@string/insert_blackbox_ip_header"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="16sp"
            custom:typeface="franklin_gothic_demi"
            android:background="@color/blackTransparent"
            android:id="@+id/insert_blackbox_ip_header"/>


        <!--    BODY    -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:layout_below="@id/insert_blackbox_ip_header"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp">

            <EditText
                android:id="@+id/editText_blackbox_name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="blackbox_name" />

            <EditText
                android:id="@+id/editText_blackbox_ip"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/editText_blackbox_name"
                android:layout_margin="10dp"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="@string/hint_blackbox_ip" />

            <com.example.blackbox.graphics.CustomButton
                android:id="@+id/refresh_button_blackbox_ip"
                android:layout_width="216dp"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:layout_below="@+id/editText_blackbox_ip"
                android:layout_alignParentStart="true"
                android:background="@drawable/popup_button_lightgray"
                android:text="Refresh"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="15sp"
                custom:letterSpacing="0.0"
                custom:typeface="franklin_gothic_demi" />


            <com.example.blackbox.graphics.CustomButton
                android:id="@+id/ok_button_blackbox_ip"
                android:layout_width="216dp"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:layout_below="@+id/editText_blackbox_ip"
                android:layout_alignParentEnd="true"
                android:background="@drawable/popup_button_green"
                android:text="@string/ok"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="15sp"
                custom:letterSpacing="0.0"
                custom:typeface="franklin_gothic_demi" />


        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>

