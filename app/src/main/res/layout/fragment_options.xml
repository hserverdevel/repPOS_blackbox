    <!-- Bottom part - Receipt Options -->

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/payment_options_container"
        android:id="@+id/options_button_container_aa">

        <View
            android:layout_width="322dp"
            android:layout_height="2dp"
            android:background="@drawable/divider_line_horizontal"
            android:id="@+id/bottom_hline1"
            android:layout_marginTop="6dp"/>

        <!-- First Row -->

        <com.example.blackbox.graphics.CustomButton
            android:layout_width="154dp"
            android:layout_height="30dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/button_lightblue_3dp_white_press"
            android:textColor="@color/white"
            android:text="@string/invoice"
            android:textAllCaps="true"
            custom:typeface="franklin_gothic_demi"
            android:textSize="14sp"
            android:id="@+id/invoice_button"
            android:layout_below="@id/bottom_hline1"/>

        <View
            android:layout_width="2dp"
            android:layout_height="30dp"
            android:background="@drawable/divider_line"
            android:id="@+id/bottom_vline1"
            android:layout_below="@id/bottom_hline1"
            android:layout_toRightOf="@id/invoice_button"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="6dp"/>

        <com.example.blackbox.graphics.CustomButton
            android:layout_width="154dp"
            android:layout_height="30dp"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="6dp"
            android:background="@drawable/button_lightblue_3dp_white_press"
            android:textColor="@color/white"
            android:text="@string/print"
            android:textAllCaps="true"
            custom:typeface="franklin_gothic_demi"
            android:textSize="14sp"
            android:id="@+id/print_button"
            android:layout_below="@id/bottom_hline1"
            android:layout_toRightOf="@id/bottom_vline1"/>

        <View
            android:layout_width="322dp"
            android:layout_height="2dp"
            android:background="@drawable/divider_line_horizontal"
            android:id="@+id/bottom_hline2"
            android:layout_below="@id/invoice_button"
            android:layout_marginTop="6dp"/>

        <!-- Second Row -->

        <com.example.blackbox.graphics.CustomButton
            android:layout_width="154dp"
            android:layout_height="30dp"
            android:layout_marginTop="6dp"
            android:textColor="@color/white"
            android:background="@drawable/button_lightblue_3dp_white_press"
            android:text="@string/split_item"
            android:textAllCaps="true"
            custom:typeface="franklin_gothic_demi"
            android:textSize="14sp"
            android:id="@+id/homage_button"
            android:layout_below="@id/bottom_hline2"/>

        <View
            android:layout_width="2dp"
            android:layout_height="30dp"
            android:background="@drawable/divider_line"
            android:id="@+id/bottom_vline2"
            android:layout_below="@id/bottom_hline2"
            android:layout_toRightOf="@id/homage_button"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="6dp"/>

        <com.example.blackbox.graphics.CustomButton
            android:layout_width="154dp"
            android:layout_height="30dp"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="6dp"
            android:background="@drawable/button_lightblue_3dp_white_press"
            android:textColor="@color/white"
            android:text="@string/discount"
            android:textAllCaps="true"
            custom:typeface="franklin_gothic_demi"
            android:textSize="14sp"
            android:id="@+id/discount_button"
            android:layout_below="@id/bottom_hline2"
            android:layout_toRightOf="@id/bottom_vline2"/>

        <View
            android:layout_width="322dp"
            android:layout_height="2dp"
            android:background="@drawable/divider_line_horizontal"
            android:id="@+id/bottom_hline3"
            android:layout_below="@id/homage_button"
            android:layout_marginTop="6dp"/>

        <!-- Third Row -->

        <com.example.blackbox.graphics.CustomButton
            android:layout_width="154dp"
            android:layout_height="30dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/button_lightblue_3dp_white_press"
            android:textColor="@color/white"
            android:text="@string/round_it"
            android:textAllCaps="true"
            custom:typeface="franklin_gothic_demi"
            android:textSize="14sp"
            android:id="@+id/round_button"
            android:layout_below="@id/bottom_hline3"/>

        <View
            android:layout_width="2dp"
            android:layout_height="30dp"
            android:background="@drawable/divider_line"
            android:id="@+id/bottom_vline3"
            android:layout_below="@id/bottom_hline3"
            android:layout_toRightOf="@id/round_button"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="6dp"/>

        <com.example.blackbox.graphics.CustomButton
            android:layout_width="154dp"
            android:layout_height="30dp"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="6dp"
            android:background="@drawable/button_lightblue_3dp_white_press"
            android:textColor="@color/white"
            android:text="@string/email_it"
            android:textAllCaps="true"
            custom:typeface="franklin_gothic_demi"
            android:textSize="14sp"
            android:id="@+id/email_it_button"
            android:layout_below="@id/bottom_hline3"
            android:layout_toRightOf="@id/bottom_vline3"/>

    </RelativeLayout>

</RelativeLayout>
