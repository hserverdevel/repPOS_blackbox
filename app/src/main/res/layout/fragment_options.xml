    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/option_payment_header"
        android:orientation="vertical">

        <View
            android:layout_width="322dp"
            android:layout_height="2dp"
            android:background="@drawable/divider_line_horizontal"
            android:id="@+id/top_line1"/>

        <com.example.blackbox.graphics.CustomTextView
            android:layout_width="322dp"
            android:layout_height="70dp"
            android:id="@+id/options_title"
            android:text="@string/payment_type_receipt_options"
            android:inputType="textCapWords"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:gravity="center"
            custom:typeface="franklin_gothic_demi"
            custom:letterSpacing="0.0"/>

        <View
            android:layout_width="322dp"
            android:layout_height="2dp"
            android:background="@drawable/divider_line_horizontal"
            android:id="@+id/top_line2"
            />

    </LinearLayout>

