<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.blackbox.activities.PinpadActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blackTransparent"
    android:id="@+id/one_button"
    >

    <RelativeLayout
        android:layout_width="487dp"
        android:layout_height="wrap_content"
        android:background="@drawable/view_base_background"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:id="@+id/popup_container"
        android:visibility="visible"
        >

        <com.example.blackbox.graphics.CustomTextView
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginTop="5dp"
            android:text="@string/this_table_cannot_be_merged"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="16sp"
            custom:typeface="franklin_gothic_demi"
            android:gravity="center"
            android:id="@+id/popup_text"
            android:layout_centerHorizontal="true" />

        <RelativeLayout
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="5dp"
            android:layout_width="477dp"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_below="@+id/popup_text"
            android:orientation="horizontal"
            >

            <com.example.blackbox.graphics.CustomButton
                android:layout_width="216dp"
                android:layout_height="42dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/popup_button_green"
                android:text="@string/ok"
                android:textSize="15dp"
                custom:typeface="franklin_gothic_demi"
                android:textColor="@color/white"
                android:id="@+id/okButton"/>

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>
