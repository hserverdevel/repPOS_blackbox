<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:background="@color/blackTransparent">

    <RelativeLayout
        android:layout_width="490dp"
        android:layout_height="166dp"
        android:id="@+id/automatic_popup_window"
        android:background="@drawable/view_border_6dp_grey_in">

        <com.example.blackbox.graphics.CustomTextView
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:id="@+id/title_tv"
            android:text="@string/please_reserve_the_table"
            android:textAllCaps="true"
            custom:typeface="franklin_gothic_demi"
            android:textColor="@color/white"
            android:background="@color/gray2"
            android:gravity="center_vertical"
            android:textAlignment="center"/>

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="457dp"
            android:id="@+id/popup_reservations_rv"
            android:layout_below="@id/title_tv"
            android:background="@color/gray2"/>

    </RelativeLayout>

    <!-- BASELINE X AND OK BUTTONS -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:id="@+id/footer"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="15dp"
        android:background="@color/black">
        <ImageButton style="@style/PopupWindowButton"
            android:layout_width="512dp"
            android:layout_height="52dp"
            android:id="@+id/kill"
            android:background="@drawable/dismiss_button_background"
            android:src="@drawable/cancelbutton"
            />
        <View
            android:layout_width="2dp"
            android:layout_height="40dp"
            android:background="@drawable/vertical_dashed_line"
            android:layerType="software"
            android:layout_marginTop="8dp"
            android:id="@+id/bottomline"
            />
        <ImageButton style="@style/PopupWindowButton"
            android:layout_width="512dp"
            android:layout_height="52dp"
            android:id="@+id/ok"
            android:src="@drawable/okbutton"
            android:background="@drawable/ok_button_background"/>
    </LinearLayout>

</RelativeLayout>
