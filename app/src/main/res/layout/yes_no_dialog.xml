<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blackTransparent"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="689dp"
        android:id="@+id/mainspace"
        android:background="@color/blackTransparent">

        <RelativeLayout
            android:layout_width="487dp"
            android:layout_height="134dp"
            android:layout_centerInParent="true"
            android:background="@drawable/view_base_background"
            android:id="@+id/save_bill_window">

            <com.example.blackbox.graphics.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="52dp"
                android:text="@string/confirm_delete"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="16sp"
                custom:typeface="franklin_gothic_demi"
                android:background="@color/blackTransparent"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:id="@+id/delete_window"
                android:layout_centerHorizontal="true"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:layout_below="@id/delete_window"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp">

                <com.example.blackbox.graphics.CustomButton
                    android:layout_width="216dp"
                    android:layout_height="42dp"
                    android:text="@string/cancel"
                    android:id="@+id/cancel_button"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/popup_button_green"
                    android:textColor="@color/white"
                    custom:typeface="franklin_gothic_demi"
                    android:textSize="15sp"
                    custom:letterSpacing="0.0"
                    android:textAllCaps="false"/>

                <com.example.blackbox.graphics.CustomButton
                    android:layout_width="216dp"
                    android:layout_height="42dp"
                    android:text="@string/delete"
                    android:textSize="15sp"
                    android:id="@+id/delete_button"
                    android:layout_toRightOf="@id/cancel_button"
                    android:background="@drawable/popup_button_red"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:textAllCaps="false"
                    custom:letterSpacing="0.0"
                    android:textColor="@color/white"
                    custom:typeface="franklin_gothic_demi"/>

            </RelativeLayout>

        </RelativeLayout>

    </RelativeLayout>

    <!-- BASELINE X AND OK BUTTONS -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/footer"
        android:background="@color/black"
        android:layout_below="@+id/mainspace"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_height="match_parent"
            android:id="@+id/footerspace">


            <RelativeLayout
                android:layout_width="511dp"
                android:layout_height="match_parent"
                android:id="@+id/cancelspace">

                <ImageButton
                    android:id="@+id/kill"
                    android:layout_width="match_parent"
                    android:layout_centerHorizontal="true"
                    android:layout_height="55dp"
                    android:background="@drawable/dismiss_button_background"
                    android:src="@drawable/cancelbutton" />

            </RelativeLayout>

            <View
                android:layout_width="2dp"
                android:layout_height="38dp"
                android:layout_toRightOf="@+id/cancelspace"
                android:background="@drawable/vertical_dashed_line"
                android:layout_marginTop="8dp"
                android:id="@+id/bottomline" />

            <RelativeLayout
                android:layout_width="511dp"
                android:layout_centerHorizontal="true"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/bottomline"
                android:id="@+id/okspace">

                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_centerHorizontal="true"
                    android:layout_height="55dp"
                    android:id="@+id/ok"
                    android:src="@drawable/okbutton"
                    android:background="@drawable/ok_button_background"/>

            </RelativeLayout>


        </RelativeLayout>


    </RelativeLayout>


</RelativeLayout>
