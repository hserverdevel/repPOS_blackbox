                   android:layout_height="42dp"
                   android:textAllCaps="true"
                   android:gravity="center"
                   android:id="@+id/add_fidelity_code"
                   android:background="@drawable/view_border_white_in"
                   android:textSize="21sp"
                   android:paddingStart="10dp"
                   android:inputType="textCapWords"
                   custom:typeface="franklin_gothic_book_cd"
                   android:nextFocusDown="@id/name_et"
                   />

               <TextView
                   android:layout_width="170dp"
                   android:layout_height="42dp"
                   android:layout_toEndOf="@id/add_fidelity_code"
                   android:hint="@string/fidelity_code"
                   android:textAllCaps="true"
                   android:gravity="right"
                   android:id="@+id/show_fidelity_credit"
                   android:background="@drawable/view_border_white_in"
                   android:textSize="21sp"
                   android:paddingStart="10dp"
                   android:inputType="textCapWords"
                   custom:typeface="franklin_gothic_book_cd"
                   android:nextFocusDown="@id/name_et"
                   />



               <ImageButton
                   android:id="@+id/add_fidelity_credit_button"
                   android:layout_width="42dp"
                   android:layout_height="42dp"
                   android:layout_alignParentEnd="true"
                   android:padding="20dp"
                   android:adjustViewBounds="true"
                   android:scaleType="centerInside"
                   android:src="@drawable/big_plus_button"
                   />

               <View
                   android:layout_width="match_parent"
                   android:layout_height="2dp"
                   android:background="@drawable/divider_line_horizontal"
                   android:layout_marginTop="6dp"
                   android:id="@+id/hline_fidelity_code"
                   android:layout_below="@id/add_fidelity_code"/>


               <com.example.blackbox.graphics.CustomEditText
                   android:layout_width="238dp"
                   android:layout_height="42dp"
                   android:hint="@string/name"
                   android:background="@drawable/view_border_white_in"
                   android:id="@+id/name_et"
                   custom:typeface="franklin_gothic_book_cd"
                   android:textSize="21sp"
                   android:paddingStart="10dp"
                   android:inputType="textCapWords"
                   android:nextFocusDown="@id/surname_et"
                   android:layout_below="@+id/hline_fidelity_code"
                   android:layout_marginTop="6dp"/>
               <View
                   android:layout_width="2dp"
                   android:layout_height="42dp"
                   android:id="@+id/vline1_right"
                   android:background="@drawable/divider_line"
                   android:layout_toRightOf="@id/name_et"
                   android:layout_below="@+id/hline_fidelity_code"
                   android:layout_marginStart="6dp"
                   android:layout_marginTop="6dp"/>
