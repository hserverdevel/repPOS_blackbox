<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.blackbox.activities.ClientsActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main">

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/blackTransparent" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="618dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="49dp"
        android:orientation="horizontal"
        android:id="@+id/linear_container">
        <RelativeLayout
            android:layout_width="490dp"
            android:layout_height="match_parent"
            android:id="@+id/left_pane">

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:id="@+id/hline1"
                android:background="@drawable/divider_line_horizontal"/>
            <com.example.blackbox.graphics.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="69dp"
                android:id="@+id/title_tv"
                android:layout_below="@id/hline1"
                android:textColor="@color/white"
                android:text="@string/registered_clients"
                android:textAllCaps="true"
                custom:typeface="franklin_gothic_demi"
                android:textSize="18sp"
                android:gravity="center"/>
            <com.example.blackbox.graphics.CustomEditText
                android:layout_width="match_parent"
                android:layout_height="57dp"
                android:layout_marginTop="6dp"
                android:id="@+id/search_et"
                android:background="@color/white"
                android:hint="@string/search"
                android:layout_below="@id/hline1"
                android:textColor="@color/black"
                custom:typeface="franklin_gothic_demi"
                android:textSize="24sp"
                android:gravity="center"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:imeOptions="actionDone"
                android:visibility="gone"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:id="@+id/hline2"
                android:layout_below="@id/title_tv"
                android:background="@drawable/divider_line_horizontal"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:id="@+id/hline_rv_top"
                android:layout_below="@id/hline2"
                android:layout_marginTop="14dp"
                android:background="@drawable/divider_line_horizontal1dp"/>
            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="457dp"
                android:id="@+id/clients_rv"
                android:layout_below="@id/hline_rv_top"/>
            <!--<View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:id="@+id/hline_rv_bottom"
                android:layout_below="@id/clients_rv"
                android:layout_marginTop="-3dp"
                android:background="@drawable/divider_line_horizontal1dp"/>-->
            <!--android:layout_below="@id/hline3"-->
            <com.example.blackbox.graphics.CustomButton
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:id="@+id/search_client_button"
                android:layout_marginTop="6dp"
                android:textColor="@color/white"
                android:background="@drawable/view_border"
                custom:typeface="franklin_gothic_demi"
                android:textSize="18sp"
                android:layout_alignParentBottom="true"
                android:text="@string/search_clients"
                android:textAllCaps="true"/>
            <!--android:layout_below="@id/clients_rv"-->
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:id="@+id/hline3"
                android:layout_above="@id/search_client_button"
                android:background="@drawable/divider_line_horizontal"
                android:layout_marginTop="20dp"/>
        </RelativeLayout>
        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@drawable/divider_line"
            android:layout_marginLeft="6dp"/>

        <!-- RIGHT PANEL -->
        <RelativeLayout
            android:layout_width="490dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="6dp"
            android:id="@+id/right_pane">
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:id="@+id/hline1_right"
                android:background="@drawable/divider_line_horizontal"/>
            <com.example.blackbox.graphics.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="69dp"
                android:id="@+id/title_right_tv"
                android:layout_below="@id/hline1_right"
                android:textColor="@color/white"
                android:text="@string/new_clients_info"
                android:textAllCaps="true"
                custom:typeface="franklin_gothic_demi"
                android:textSize="18sp"
                android:gravity="center"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:id="@+id/hline2_right"
                android:layout_below="@id/title_right_tv"
                android:background="@drawable/divider_line_horizontal"/>

           <RelativeLayout
