<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:clickable="true">

    <RelativeLayout
        android:id="@+id/mainspace"
        android:layout_width="match_parent"
        android:layout_height="689dp"
        android:background="@color/blackTransparent">

        <RelativeLayout
            android:id="@+id/add_fidelity_credit_window"
            android:layout_width="600dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/view_base_background">


            <com.example.blackbox.graphics.CustomTextView
                android:id="@+id/delete_header"
                android:layout_width="wrap_content"
                android:layout_height="52dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="Fidelity Package List"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="16sp"
                custom:typeface="franklin_gothic_demi"
                />


            <RelativeLayout
                android:id="@+id/add_fidelity_credit_internal_window"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/delete_header"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                android:background="@color/white"
                android:orientation="vertical">

                <com.example.blackbox.graphics.CustomEditText
                    android:id="@+id/fidelity_pacakge_name_et"
                    android:layout_width="260dp"
                    android:layout_height="50dp"
                    android:layout_margin="15dp"
                    android:background="@drawable/view_border"
                    android:gravity="center"
                    android:textColor="@color/blackTransparent"
                    android:textColorHighlight="@color/gray"
                    android:textCursorDrawable="@null"
                    android:hint="Package Name"/>


                <com.example.blackbox.graphics.CustomEditText
                    android:id="@+id/fidelity_package_creditAmount_et"
                    android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:layout_margin="15dp"
                    android:layout_toEndOf="@id/fidelity_pacakge_name_et"
                    android:background="@drawable/view_border"
                    android:gravity="center"
                    android:textColor="@color/blackTransparent"
                    android:textColorHighlight="@color/gray"
                    android:textCursorDrawable="@null"
                    android:inputType="number"
                    android:hint="Amount"/>

                <com.example.blackbox.graphics.CustomEditText
                    android:id="@+id/fidelity_package_price_et"
                    android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:layout_margin="15dp"
                    android:layout_toEndOf="@id/fidelity_package_creditAmount_et"
                    android:background="@drawable/view_border"
                    android:gravity="center"
                    android:textColor="@color/blackTransparent"
                    android:textColorHighlight="@color/gray"
                    android:textCursorDrawable="@null"
                    android:inputType="numberDecimal"
                    android:hint="Price" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_margin="15dp"
                    android:background="@drawable/view_border"
                    android:layout_below="@id/fidelity_package_creditAmount_et">


                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/fidelity_package_rv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginBottom="10dp"
                        android:layout_centerVertical="true"
                        android:background="@color/white"/>

                </LinearLayout>



            </RelativeLayout>

        </RelativeLayout>

    </RelativeLayout>


    <!-- BASELINE X AND OK BUTTONS -->


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/mainspace"
        android:id="@+id/footer"
        android:background="@color/black">


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_height="match_parent"
            android:id="@+id/footerspace">


            <RelativeLayout
                android:layout_width="511dp"
                android:layout_height="match_parent"
                android:id="@+id/cancelspace">

                <ImageButton
                    android:id="@+id/kill"
                    android:layout_width="match_parent"
                    android:layout_centerHorizontal="true"
                    android:layout_height="55dp"
                    android:background="@drawable/dismiss_button_background"
                    android:src="@drawable/cancelbutton" />

            </RelativeLayout>

            <View
                android:layout_width="2dp"
                android:layout_height="38dp"
                android:layout_toRightOf="@+id/cancelspace"
                android:background="@drawable/vertical_dashed_line"
                android:layout_marginTop="8dp"
                android:id="@+id/bottomline" />

            <RelativeLayout
                android:layout_width="511dp"
                android:layout_centerHorizontal="true"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/bottomline"
                android:id="@+id/okspace">

                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_centerHorizontal="true"
                    android:layout_height="55dp"
                    android:id="@+id/ok"
                    android:src="@drawable/okbutton"
                    android:background="@drawable/ok_button_background"/>

            </RelativeLayout>

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>
