                android:layout_height="2dp"
                android:id="@+id/hline1"
                android:background="@drawable/divider_line_horizontal"/>

            <com.example.blackbox.graphics.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="69dp"
                android:id="@+id/title_tv"
                android:layout_below="@id/hline1"
                android:textColor="@color/white"
                android:text="@string/take_away"
                android:textAllCaps="true"
                custom:typeface="franklin_gothic_demi"
                android:textSize="18sp"
                android:gravity="center"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:id="@+id/hline2"
                android:layout_below="@id/title_tv"
                android:background="@drawable/divider_line_horizontal"
                android:layout_marginBottom="14dp"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/take_away_recycler"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/hline2"
