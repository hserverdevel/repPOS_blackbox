    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:id="@+id/bottom_hline"
        android:layout_below="@id/linear_container"
        android:background="@drawable/divider_line_horizontal"
        android:layout_marginTop="6dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:id="@+id/bottom_button_container"
        android:orientation="horizontal"
        android:layout_below="@id/bottom_hline">

        <com.example.blackbox.graphics.CustomButton
            android:layout_width="490dp"
            android:layout_height="46dp"
            android:id="@+id/recent_orders"
            android:layout_marginTop="6dp"
            android:textColor="@color/white"
            android:background="@drawable/view_border"
            custom:typeface="franklin_gothic_demi"
            android:textSize="18sp"
            android:text="@string/recent_orders"
            android:textAllCaps="true"
            android:layout_marginLeft="15dp"
            />

        <View
            android:layout_width="2dp"
            android:layout_height="46dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/divider_line"
            android:layout_marginLeft="6dp"
            />

        <com.example.blackbox.graphics.CustomButton
            android:layout_width="490dp"
            android:layout_height="46dp"
            android:id="@+id/search_order"
            android:layout_marginTop="6dp"
            android:textColor="@color/white"
            android:background="@drawable/view_border"
            custom:typeface="franklin_gothic_demi"
            android:textSize="18sp"
            android:text="@string/search_orders"
            android:textAllCaps="true"
            android:layout_marginLeft="6dp"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:id="@+id/bottom_hline_last"
        android:layout_below="@id/bottom_button_container"
        android:background="@drawable/divider_line_horizontal"
        android:layout_marginTop="0dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        />


    <!-- BASELINE X AND OK BUTTONS -->


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/bottom_hline_last"
        android:id="@+id/footer"
        android:background="@color/black">


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_height="match_parent"
            android:id="@+id/footerspace">


            <RelativeLayout
                android:layout_width="511dp"
                android:layout_height="match_parent"
                android:id="@+id/cancelspace">

                <ImageButton
                    android:id="@+id/kill"
                    android:layout_width="match_parent"
                    android:layout_centerHorizontal="true"
                    android:layout_height="55dp"
                    android:background="@drawable/dismiss_button_background"
                    android:src="@drawable/cancelbutton" />

            </RelativeLayout>

            <View
                android:layout_width="2dp"
                android:layout_height="38dp"
                android:layout_toRightOf="@+id/cancelspace"
                android:background="@drawable/vertical_dashed_line"
                android:layout_marginTop="8dp"
                android:id="@+id/bottomline" />

            <RelativeLayout
                android:layout_width="511dp"
                android:layout_centerHorizontal="true"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/bottomline"
                android:id="@+id/okspace">

                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_centerHorizontal="true"
                    android:layout_height="55dp"
                    android:id="@+id/ok"
                    android:src="@drawable/okbutton"
                    android:background="@drawable/ok_button_background"/>

            </RelativeLayout>


        </RelativeLayout>


    </RelativeLayout>


</RelativeLayout>
