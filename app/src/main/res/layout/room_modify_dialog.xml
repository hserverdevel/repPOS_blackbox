<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:id="@+id/single_input_container"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:clickable="true">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/mainspace"
        android:background="@color/blackTransparent">

        <RelativeLayout
            android:layout_width="487dp"
            android:layout_height="142dp"
            android:layout_centerInParent="true"
            android:background="@drawable/view_border_white_in"
            android:id="@+id/modify_room_window">

            <com.example.blackbox.graphics.CustomEditText
                android:layout_width="447dp"
                android:layout_height="42dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/view_border_white_in"
                android:hint="@string/room_name"
                android:inputType="textCapWords|textAutoCorrect"
                android:id="@+id/room_name_modify"
                android:selectAllOnFocus="true"
                android:gravity="center"
                android:textColorHighlight="@color/gray"
                android:textCursorDrawable="@null"
                android:textColor="@color/blackTransparent"
                custom:typeface="franklin_gothic_demi"
                android:textSize="20dp"/>

            <com.example.blackbox.graphics.CustomButton
                android:layout_width="447dp"
                android:layout_height="42dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:background="@color/red"
                android:text="@string/delete_room"
                android:textAllCaps="true"
                android:id="@+id/delete_button"
                android:gravity="center"
                custom:typeface="franklin_gothic_demi"
                android:textSize="14dp"
                android:textColor="@color/white"
                android:layout_below="@+id/room_name_modify"
                />

        </RelativeLayout>

    </RelativeLayout>

    <!-- BASELINE X AND OK BUTTONS -->


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/mainspace"
        android:id="@+id/footer"
        android:background="@color/black">


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_height="match_parent"
            android:id="@+id/footerspace">


            <RelativeLayout
                android:layout_width="511dp"
                android:layout_height="match_parent"
                android:id="@+id/cancelspace">

                <ImageButton
                    android:id="@+id/kill"
                    android:layout_width="match_parent"
                    android:layout_centerHorizontal="true"
                    android:layout_height="55dp"
                    android:background="@drawable/dismiss_button_background"
                    android:src="@drawable/cancelbutton" />

            </RelativeLayout>

            <View
                android:layout_width="2dp"
                android:layout_height="38dp"
                android:layout_toRightOf="@+id/cancelspace"
                android:background="@drawable/vertical_dashed_line"
                android:layout_marginTop="8dp"
                android:id="@+id/bottomline" />

            <RelativeLayout
                android:layout_width="511dp"
                android:layout_centerHorizontal="true"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/bottomline"
                android:id="@+id/okspace">

                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_centerHorizontal="true"
                    android:layout_height="55dp"
                    android:id="@+id/ok"
                    android:src="@drawable/okbutton"
                    android:background="@drawable/ok_button_background"/>

            </RelativeLayout>


        </RelativeLayout>


    </RelativeLayout>

</RelativeLayout>
