<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mody_container"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/cash_mod_cont"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/cash_modifier_container">
        <com.example.blackbox.graphics.CustomTextView
            android:layout_width="162dp"
            android:layout_height="23dp"
            custom:typeface="franklin_gothic_book_cd"
            custom:letterSpacing="0.0"
            android:textSize="15dp"
            android:id="@+id/cash_modifier_title"
            android:textColor="@color/black"
            android:layout_below="@+id/cash_title"
            android:paddingLeft="12dp"
            android:gravity="center|left"
            />
        <com.example.blackbox.graphics.CustomTextView
            android:layout_width="57dp"
            android:layout_height="23dp"
            custom:typeface="franklin_gothic_book_cd"
            android:textAllCaps="true"
            android:textSize="15dp"
            android:id="@+id/cash_modifier_quantity"
            android:textColor="@color/black"
            android:layout_toRightOf="@+id/cash_modifier_title"
            android:gravity="center"
            android:background="@color/qty_gray"
            android:paddingLeft="1dp"/>
        <com.example.blackbox.graphics.CustomTextView
            android:layout_width="101dp"
            android:layout_height="23dp"
            custom:typeface="franklin_gothic_book_cd"
            custom:letterSpacing="0.0"
            android:textSize="15dp"
            android:id="@+id/cash_modifier_price"
            android:textColor="@color/black"
            android:layout_toRightOf="@+id/cash_modifier_quantity"
            android:gravity="center|right"
            android:paddingRight="6dp"/>
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/cash_modifier_note"
            android:background="@color/qty_gray"
            android:visibility="gone">
            <com.example.blackbox.graphics.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="23dp"
                custom:typeface="franklin_gothic_book_cd"
                custom:letterSpacing="0.0"
                android:textSize="15dp"
                android:id="@+id/cash_modifier_note_title"
                android:textColor="@color/black"
                android:paddingLeft="12dp"
                android:gravity="center|left"
                android:maxLines="1"
                android:ellipsize="end"
                />
        </RelativeLayout>
    </RelativeLayout>
    <com.example.blackbox.graphics.CustomButton
        android:id="@+id/modify_modifier_button"
        android:layout_width="322dp"
        android:layout_height="35dp"
        android:background="@color/green_2"
        android:gravity="center"
        android:text="@string/change_modifiers"
        android:textColor="@color/white"
        android:textSize="13sp"
        android:visibility="gone"
        custom:typeface="franklin_gothic_demi"
        android:layout_below="@+id/cash_mod_cont"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"/>
   <!--
    <View
        android:layout_width="322dp"
        android:layout_height="2dp"
        android:background="@drawable/divider_line_horizontal"
        android:id="@+id/modifier_hdivider_line"
        android:layout_below="@+id/cash_modifier_title"
        android:layout_marginTop="4dp"
    />-->
</RelativeLayout>
