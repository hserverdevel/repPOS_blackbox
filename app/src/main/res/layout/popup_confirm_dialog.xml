<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blackTransparent">

    <RelativeLayout
        android:layout_width="487dp"
        android:layout_height="134dp"
        android:layout_centerInParent="true"
        android:background="@drawable/view_base_background"
        android:id="@+id/confirm_window">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:id="@+id/dialog_header"
            android:layout_marginTop="5dp">

            <com.example.blackbox.graphics.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/you_have_added_new_reservation_"
                custom:typeface="franklin_gothic_demi"
                android:textSize="16dp"
                android:textColor="@color/white"
                android:textAllCaps="true"
                android:id="@+id/confirm_header"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:layout_below="@id/dialog_header"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp">

            <com.example.blackbox.graphics.CustomButton
                android:layout_width="216dp"
                android:layout_height="42dp"
                android:text="@string/ok"
                android:layout_centerHorizontal="true"
                android:id="@+id/res_confirm_button"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/popup_button_green"
                android:foregroundGravity="center_horizontal"
                android:textColor="@color/white"
                custom:typeface="franklin_gothic_demi"
                android:textSize="14dp"
                custom:letterSpacing="0.0"
                android:textAllCaps="true"/>

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>
