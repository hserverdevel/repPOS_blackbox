<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:clickable="true"
    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/mainspace"
        android:background="@color/blackTransparent">


        <RelativeLayout
            android:layout_width="487dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:id="@+id/popup_vat_Insert"
            android:visibility="visible"
            android:background="@drawable/view_base_background">

            <com.example.blackbox.graphics.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="52dp"
                android:text="@string/database_options"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="16sp"
                custom:typeface="franklin_gothic_demi"
                android:background="@color/blackTransparent"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:id="@+id/database_options"
                android:layout_centerHorizontal="true"
              />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/database_options"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                android:id="@+id/vat_window"
                android:background="@color/white">

                <com.example.blackbox.graphics.CustomTextView
                    android:id="@+id/database_location"
                    android:layout_width="447dp"
                    android:layout_height="23dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:background="@color/eletric_blue"
                    android:gravity="center"
                    android:text="@string/file_location"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:textAllCaps="true"
                    custom:letterSpacing="0.0"
                    custom:typeface="franklin_gothic_demi" />

                <com.example.blackbox.graphics.CustomEditText
                    android:layout_below="@id/database_location"
                    android:layout_width="447dp"
                    android:layout_height="42dp"
                    android:hint="@string/database_name"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="15dp"
                    android:gravity="center"
                    android:id="@+id/database_name"
                    android:textColorHighlight="@color/gray"
                    android:background="@drawable/view_border3sides"
                    android:textCursorDrawable="@null"
                    android:textColor="@color/blackTransparent"
                    android:maxLines="1"
                    android:inputType="text"
                    android:imeOptions="actionDone"
                    />

                <com.example.blackbox.graphics.CustomButton
                    android:id="@+id/export_button"
                    android:layout_width="447dp"
                    android:layout_height="42dp"
                    android:layout_below="@id/database_name"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/popup_button_green"
                    android:text="@string/export_database"
                    android:textSize="15sp"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    custom:letterSpacing="0.0"
                    custom:typeface="franklin_gothic_demi"
                    />

                <com.example.blackbox.graphics.CustomButton
                    android:id="@+id/export_button_blackbox"
                    android:layout_width="447dp"
                    android:layout_height="42dp"
                    android:layout_below="@id/export_button"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/popup_button_green"
                    android:text="@string/export_in_blackbox"
                    android:textSize="15sp"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    custom:letterSpacing="0.0"
                    custom:typeface="franklin_gothic_demi"
                    />

                <com.example.blackbox.graphics.CustomButton
                    android:id="@+id/import_button"
                    android:layout_width="447dp"
                    android:layout_height="42dp"
                    android:layout_below="@id/export_button_blackbox"
                    android:layout_marginBottom="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/popup_button_green"
                    android:text="@string/import_database"
                    android:textSize="15sp"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    custom:letterSpacing="0.0"
                    custom:typeface="franklin_gothic_demi"
                    />


            </RelativeLayout>

        </RelativeLayout>

    </RelativeLayout>


    <!-- BASELINE X AND OK BUTTONS -->


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/mainspace"
        android:id="@+id/footer"
        android:background="@color/black">


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_height="match_parent"
            android:id="@+id/footerspace">


            <RelativeLayout
                android:layout_width="511dp"
                android:layout_height="match_parent"
                android:id="@+id/cancelspace">

                <ImageButton
                    android:id="@+id/kill"
                    android:layout_width="match_parent"
                    android:layout_centerHorizontal="true"
                    android:layout_height="55dp"
                    android:background="@drawable/dismiss_button_background"
                    android:src="@drawable/cancelbutton" />

            </RelativeLayout>

            <View
                android:layout_width="2dp"
                android:layout_height="38dp"
                android:layout_toRightOf="@+id/cancelspace"
                android:background="@drawable/vertical_dashed_line"
                android:layout_marginTop="8dp"
                android:id="@+id/bottomline" />

            <RelativeLayout
                android:layout_width="511dp"
                android:layout_centerHorizontal="true"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/bottomline"
                android:id="@+id/okspace">

                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_centerHorizontal="true"
                    android:layout_height="55dp"
                    android:id="@+id/ok"
                    android:src="@drawable/okbutton"
                    android:background="@drawable/ok_button_background"/>

            </RelativeLayout>


        </RelativeLayout>


    </RelativeLayout>


</RelativeLayout>
