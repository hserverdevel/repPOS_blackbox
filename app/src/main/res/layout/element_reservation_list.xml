<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/reservation_date_footer"
        android:layout_width="490dp"
        android:layout_height="40dp"
        android:visibility="gone">

        <com.example.blackbox.graphics.CustomTextView
            android:id="@+id/reservation_date_footer_arrow"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="----------------"
            android:textSize="24dp"
            android:textColor="@color/white"
            custom:typeface="franklin_gothic_book"
            android:gravity="center_vertical"/>

        <com.example.blackbox.graphics.CustomTextView
            android:id="@+id/reservation_date_footer_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toEndOf="@id/reservation_date_footer_arrow"
            android:layout_marginStart="8dp"
            android:text="dd Mon YYYY"
            android:textSize="24dp"
            android:textColor="@color/white"
            custom:typeface="franklin_gothic_book"
            android:gravity="center_vertical"/>

    </RelativeLayout>



    <RelativeLayout
        android:id="@+id/reservation_display"
        android:layout_width="490dp"
        android:layout_height="100dp"
        android:layout_centerVertical="true"
        android:background="@drawable/view_border_6dp_grey_in"
        android:layout_below="@id/reservation_date_footer">

        <RelativeLayout
            android:id="@+id/res_name_layout"
            android:layout_width="320dp"
            android:layout_height="51dp"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="20dp">

            <com.example.blackbox.graphics.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/reservation_name"
                custom:typeface="franklin_gothic_book"
                android:textColor="@color/white"
                android:gravity="center_vertical"
                android:textSize="24sp"
                android:text="@string/new_reservation"
                custom:letterSpacing="0.0"/>
        </RelativeLayout>

        <com.example.blackbox.graphics.CustomTextView
            android:layout_width="150dp"
            android:layout_height="51dp"
            android:layout_marginTop="6dp"
            android:layout_marginRight="0dp"
            android:gravity="center"
            android:layout_toRightOf="@id/res_name_layout"
            android:textAlignment="center"
            android:textSize="24dp"
            android:text="00:00"
            android:id="@+id/reservation_time"
            android:textColor="@color/white"
            custom:typeface="franklin_gothic_book"
            custom:letterSpacing="0.0"
            />

        <View
            android:layout_width="447dp"
            android:layout_height="1dp"
            android:background="@drawable/divider_line_horizontal1dp"
            android:layout_below="@id/res_name_layout"
            android:layout_marginLeft="20dp"
            android:id="@+id/input_display_hline1" />

        <com.example.blackbox.graphics.CustomTextView
            android:layout_width="490dp"
            android:layout_height="36dp"
            android:id="@+id/reservation_type"
            android:layout_below="@+id/input_display_hline1"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="9dp"
            custom:typeface="franklin_gothic_demi"
            android:textColor="@color/white"
            android:gravity="center_vertical"
            android:textSize="14sp"
            android:textAllCaps="true"
            android:text="@string/adults_children_disabled" />

    </RelativeLayout>

</RelativeLayout>
